<center>
    <h3><%= @player.name %>'s Home Page</h3>

    <h4>Your Games</h4>
    <% if @player.games %>
        <% @player.games.each do |game| %>
            <%= game.court.name %> -- <%= game.time.to_formatted_s(:gametime) %>
        <% end %>
    <% else %>
        <p>No Scheduled Games</p>
    <% end %>


</center>